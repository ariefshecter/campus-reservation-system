                    {
                        "type": "integer",
                        "description": "Kapasitas (Wajib)",
                        "name": "capacity",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "number",
                        "description": "Harga (Wajib)",
                        "name": "price",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "array",
                        "items": {
                            "type": "file"
                        },
                        "collectionFormat": "multi",
